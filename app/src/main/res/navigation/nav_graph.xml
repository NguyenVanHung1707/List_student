<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/studentListFragment">

    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.example.dssv.StudentListFragment"
        android:label="Danh sách sinh viên"
        tools:layout="@layout/fragment_student_list">
        
        <action
            android:id="@+id/action_list_to_add"
            app:destination="@id/addStudentFragment" />
        
        <action
            android:id="@+id/action_list_to_edit"
            app:destination="@id/editStudentFragment" />
    </fragment>

    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.dssv.AddStudentFragment"
        android:label="Thêm sinh viên"
        tools:layout="@layout/fragment_add_student" />

    <fragment
        android:id="@+id/editStudentFragment"
        android:name="com.example.dssv.EditStudentFragment"
        android:label="Cập nhật sinh viên"
        tools:layout="@layout/fragment_edit_student" />

</navigation>
